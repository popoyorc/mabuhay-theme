<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="linked-70" name="linked-70">
		<template-extension>vm</template-extension>
		<settings>
			<setting configurable="true" key="show-breadcrumb" type="checkbox" value="true"/>
			<setting configurable="false" key="parent-setting" type="input" value="false"/>
		</settings>
		<roles>
			<role-name>Owner</role-name>
		</roles>
		<color-scheme id="01" name="Democrat">
			<css-class>democrat</css-class>
		</color-scheme>
		<color-scheme id="02" name="Republican">
			<css-class>republican</css-class>
		</color-scheme>
		<color-scheme id="03" name="Independent">
			<css-class>independent</css-class>
		</color-scheme>
		<color-scheme id="04" name="Cool Colors">
			<css-class>cool-colors</css-class>
		</color-scheme>
		<layout-templates>
			<standard>
				<layout-template id="parent-template">
					<template-path>/layouttpl/standard/max.tpl</template-path>
					<wap-template-path>/layouttpl/standard/max.wap.tpl</wap-template-path>
					<thumbnail-path>/layouttpl/standard/max.png</thumbnail-path>
				</layout-template>
			</standard>
		</layout-templates>
		<portlet-decorator id="linked" name="Linked">
			<portlet-decorator-css-class>portlet-linked</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="barebone" name="Barebone">
			<portlet-decorator-css-class>this-should-be-here</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="borderless" name="Borderless">
			<portlet-decorator-css-class>portlet-borderless</portlet-decorator-css-class>
		</portlet-decorator>
		<portlet-decorator id="decorate" name="Decorate">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>portlet-decorate</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>